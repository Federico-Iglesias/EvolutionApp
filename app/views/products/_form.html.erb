<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, label: 'Nombre del Producto', required: true %>
  <%= f.input :package, label: 'Presentación', collection: ["ISSTE","IMSS", "Privado", "Farmacias del Ahorro"], required: true%>
  <%= f.input :shape, label: 'Forma', collection: ["Tableta","Capsula"], required: true%>
  <%= f.input :unit, label: 'Unidad', collection: ["mg", "gr"], required: true %>
  <%= f.input :number_of_blisters_per_box, label: 'Número de blisters por caja', required: true, as: :integer %>
  <%= f.input :number_of_units_per_blister, label: 'Número de unidades por blister', required: true, as: :integer %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

